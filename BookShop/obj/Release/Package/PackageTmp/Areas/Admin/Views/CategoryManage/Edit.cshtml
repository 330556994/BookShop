@model BookShop.Areas.Admin.Models.Categories

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Categories</legend>
    
            @Html.HiddenFor(model => model.Id)
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.SortNum)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SortNum)
                @Html.ValidationMessageFor(model => model.SortNum)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Pid)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Pid)
                @Html.ValidationMessageFor(model => model.Pid)
            </div>
    
            <p>
                <input type="submit" value="更新" />
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("返回列表", "Index")
    </div>
</body>
</html>
