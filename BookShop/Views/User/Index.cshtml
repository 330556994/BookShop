  <div id="w2" class="easyui-window" 
        title="编辑图书类别" 
        data-options="modal:true,closed:true,iconCls:'icon-save'" 
        style="width:500px;height:200px;padding:5px;">
		<div class="easyui-layout" data-options="fit:true">
		
			<div data-options="region:'center'" style="padding:10px;">
				<table>
                    <tr>
                        <td>图书编号:</td>
                        <td>
                           <span id="cid"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>类别名称:</td>
                        <td>
                            <input type="text" id="name" />
                        </td>
                    </tr>
				</table>
			</div>
			<div data-options="region:'south',border:false" style="text-align:right;padding:5px 0 0;">
				<a class="easyui-linkbutton" 
                    data-options="iconCls:'icon-ok'" 
                    href="javascript:void(0)" 
                    onclick="saveUpdate()" style="width:80px">修改</a>
				<a class="easyui-linkbutton" 
                    data-options="iconCls:'icon-cancel'" 
                    href="javascript:void(0)" 
                    onclick="javascript:$('#w2').window('close')" 
                    style="width:80px">取消</a>
			</div>
		</div>
	</div>
<!--这里开始会员查看订单详情模态窗口-->
    <div id="windowforOrderManager" class="easyui-window"  title="订单详情" fit="true"  data-options="iconCls:'icon-save',border:false,resizable:false,collapsible:false,minimizable:false,maximizable:false,closable:false,closed:true"  >
		<div class="easyui-layout" data-options="fit:true">
			<div data-options="region:'center'">
                订单编号:<input class="easyui-textbox" id="OrderId" name="Id" disabled="disabled">
                <table class="easyui-datagrid" 
                            id="dgfororder"
                            style="width:1200px;"   
                            data-options="url:'/admin/Home/ListForOrderBooksByOrderId',
                            fitColumns:true,
                            singleSelect:true,
                            autoRowHeight:true,
                            pagination:true,
                            loadMsg: '正在玩命加载中,请稍候...',
                            pageNumber:1,
                            pageSize:5,
                            pageList:[5,10,15,20]
                            ">   
                    <thead>   
                        <tr>   
                            <th data-options="field:'Id',align:'center'">订单明细</th>  
                            <th data-options="field:'OrderID'">订单编号</th>
                            <th data-options="field:'BookID'">图书编号</th>
                            <th data-options="field:'bookImg',formatter:formatPicture">图书图片</th>
                            <th data-options="field:'title'">图书名字</th>
                            <th data-options="field:'Quantity'">数量</th>
                            <th data-options="field:'marketPrice'">市场价</th>
                            <th data-options="field:'UnitPrice'">会员价</th>
                            <th data-options="field:'flag',formatter:formatFlagForBuyWay">购买方式</th>
                            <th data-options="field:'flagfororders',formatter:formatFlag">订单状态</th>
                            
                        </tr>   
                    </thead>   
                </table>
			</div>
			<div data-options="region:'south',border:false" style="text-align:center;padding:5px 0 0;height:70px;">
				<a class="easyui-linkbutton" id="btnConfirmOrder" onclick="changeOrderFlagByAjax(4)"
                    data-options="iconCls:'icon-ok'" 
                    href="javascript:void(0)" 
                    style="width:100px;height:50px;font-size:20px;">取消订单</a>
				<a class="easyui-linkbutton" 
                    data-options="iconCls:'icon-cancel'" 
                    href="javascript:void(0)" 
                    onclick="javascript:$('#windowforOrderManager').window('close')" 
                    style="width:100px;height:50px;font-size:20px;">返回</a>
			</div>
		</div>
	</div>


    




