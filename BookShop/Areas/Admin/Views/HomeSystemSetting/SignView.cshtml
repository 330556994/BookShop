
@{
    int flag = ViewBag.Flag;

    int defaultValue = ViewBag.DefaultValue;
}

    
    

<div>

    <!--隐藏域，将当前状态传递-->
    <input type="hidden"  value="@flag" id="flag" />
    <p>当前设置的是，
        @if (flag == 0)
        {
            <span>单次签到积分设置</span>
        }
        else
        {
            <span>连续签到积分设置</span>
        }
    </p>
    <p>
        <input type="number" value="@defaultValue" id="statNum" /><input type="button" value="确认修改" onclick="btnSignValue()" />
    </p>

</div>